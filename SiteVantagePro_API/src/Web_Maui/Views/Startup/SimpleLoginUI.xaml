<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="Web_Maui.Views.Startup.SimpleLoginUI"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:handlers="clr-namespace:Web_Maui.Handlers"
    Shell.NavBarIsVisible="false">

    <VerticalStackLayout
        Padding="30.0"
        Spacing="25"
        VerticalOptions="Center">
        <Image
            HeightRequest="150"
            Source="TMGUSA_Logo.png"
            WidthRequest="150" />
        <VerticalStackLayout>
            <Label
                FontSize="28"
                HorizontalTextAlignment="Center"
                Text="Welcome!"
                TextColor="Gray" />
            <Label
                FontSize="18"
                HorizontalTextAlignment="Center"
                Text="Login to your account"
                TextColor="Gray" />
        </VerticalStackLayout>

        <StackLayout Orientation="Horizontal">
            <Frame
                BorderColor="White"
                CornerRadius="28"
                HasShadow="True"
                HeightRequest="56"
                WidthRequest="56"
                ZIndex="1">
                <Image
                    HeightRequest="20"
                    Source="user.png"
                    WidthRequest="20" />
            </Frame>
            <Frame
                Margin="-20,0,0,0"
                Padding="0"
                BorderColor="White"
                HasShadow="True"
                HeightRequest="45"
                HorizontalOptions="FillAndExpand">
                <Entry
                    Margin="20,0,0,0"
                    Keyboard="Email"
                    Placeholder="Email Address"
                    VerticalOptions="Center" />
            </Frame>
        </StackLayout>

        <StackLayout Orientation="Horizontal">
            <Frame
                BorderColor="White"
                CornerRadius="28"
                HasShadow="True"
                HeightRequest="56"
                WidthRequest="56"
                ZIndex="1">
                <Image
                    HeightRequest="20"
                    Source="lock.png"
                    WidthRequest="20" />
            </Frame>
            <Frame
                Margin="-20,0,0,0"
                Padding="0"
                BorderColor="White"
                HasShadow="True"
                HeightRequest="45"
                HorizontalOptions="FillAndExpand">
                <Entry
                    Margin="20,0,0,0"
                    IsPassword="True"
                    Keyboard="Email"
                    Placeholder="Password"
                    VerticalOptions="Center" />
            </Frame>
        </StackLayout>

        <Button
            BackgroundColor="#0792ef"
            CornerRadius="20"
            HorizontalOptions="Center"
            Text="Sign In"
            WidthRequest="100" />

        <StackLayout
            HorizontalOptions="Center"
            Orientation="Horizontal"
            Spacing="5">
            <Label Text="Don't have account?" TextColor="Gray" />
            <Label Text="Sign up here" TextColor="#50b3f2" />
        </StackLayout>
    </VerticalStackLayout>
</ContentView>
